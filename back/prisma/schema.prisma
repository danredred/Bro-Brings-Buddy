generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int           @id @default(autoincrement())
  username             String        @unique
  password             Bytes
  permission           Permission    @default(PEASANT)
  application          Application[] @relation("ApplicationTarget")
  approvedApplications Application[] @relation("ApplicationApprovers")
  submittedAplications Application[] @relation("ApplicationSubmitter")
}

enum Permission {
  ADMIN
  MEMBER
  PEASANT
}

model Application {
  id          Int      @id @default(autoincrement())
  createdDate DateTime @default(now())

  aboutUser      User   @relation("ApplicationTarget", fields: [aboutUserId], references: [id])
  aboutUserId    Int    
  approvingUsers User[] @relation("ApplicationApprovers")

  submitterUser     User    @relation("ApplicationSubmitter", fields: [submitterUserId], references: [id])
  submitterUserId   Int

  status         Status @default(PENDING)
  type          ApplicationType @default(TOMEMBER)
}

enum ApplicationType {
  TOMEMBER
  TOADMIN
}

enum Status{
  PENDING
  CLOSED
  APPROVED
}